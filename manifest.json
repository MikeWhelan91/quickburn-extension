{
  "manifest_version": 3,
  "name": "Quickburn â€” Burn After Reading",
  "description": "Right-click text to create a burn-after-reading Quickburn link.",
  "version": "1.1.0",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "background.js" },
  "permissions": ["contextMenus", "clipboardWrite", "storage"],
  "host_permissions": ["https://quickburn.me/*"],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
  "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'"  },
  "web_accessible_resources": [{
  "resources": ["vendor/argon2/argon2.wasm"],
  "matches": ["<all_urls>"]
  }]
}
