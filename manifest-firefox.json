{
  "manifest_version": 3,
  "name": "Quickburn â€” Burn After Reading",
  "description": "Right-click text to create a burn-after-reading Quickburn link.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://quickburn.me/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "quickburn@quickburn.me",
      "strict_min_version": "109.0"
    }
  }
}